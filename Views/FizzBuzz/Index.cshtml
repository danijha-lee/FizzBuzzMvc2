@model FizzBuzzMvc2.Models.FizzBuzz

<div class="text-center">
    <h1 class="font">Fizz Buzz</h1>
    <hr />
    <form asp-controller="FizzBuzz" asp-action="Index" method="post">
        <div class="form-group col-6 offset-3 ">
            <label class="font" asp-for="FizzValue">Fizz Value</label>
            <input type="number" asp-for="FizzValue" class="form-control" placeholder="Enter Start Value" />
        </div>
        <div class="form-group  col-6 offset-3">
            <label class="font" asp-for="BuzzValue">Buzz Value</label>
            <input type="number" asp-for="BuzzValue" class="form-control" placeholder="Enter End Value" />
        </div>
        <button type="submit" class="btn font btn-dark">Submit</button>
    </form>
    <hr />
    @if (Model.Results.Count() > 0)

    {
        <table class="table table-striped">
            <tbody>
                @for (var i = 0; i < Model.Results.Count; i+=5)
                {
                <tr>
                    <td class="font @Model.Results[i]">@Model.Results[i]</td>
                    <td class="font @Model.Results[i + 1]">@Model.Results[i + 1]</td>
                    <td class="font @Model.Results[i + 2]">@Model.Results[i + 2]</td>
                    <td class="font @Model.Results[i + 3]">@Model.Results[i + 3]</td>
                    <td class="font @Model.Results[i + 4]">@Model.Results[i + 4]</td>
                </tr>
                 }
            
            </tbody>
        </table>
    }

